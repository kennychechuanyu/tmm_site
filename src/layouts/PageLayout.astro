---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  title: string;
  description: string;
  subtitle?: string;
}

const { title, description, subtitle } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <!-- Page Header -->
  <section class="border-b border-slate-200 bg-white py-16 dark:border-slate-800 dark:bg-slate-900">
    <div class="container-wide">
      <h1 class="text-4xl font-semibold text-slate-900 dark:text-white md:text-5xl">
        {title}
      </h1>
      {subtitle && (
        <p class="mt-4 text-lg text-slate-600 dark:text-slate-400">
          {subtitle}
        </p>
      )}
    </div>
  </section>

  <!-- Page Content -->
  <slot />
</BaseLayout>
