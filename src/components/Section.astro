---
interface Props {
  title?: string;
  subtitle?: string;
  centered?: boolean;
  background?: "white" | "gray" | "navy";
  id?: string;
}

const { title, subtitle, centered = false, background = "white", id } = Astro.props;

const bgClasses = {
  white: "bg-white dark:bg-slate-900",
  gray: "bg-slate-50 dark:bg-slate-950",
  navy: "bg-navy-50 dark:bg-navy-950",
};
---

<section id={id} class:list={["section", bgClasses[background]]}>
  <div class="container-wide">
    {(title || subtitle) && (
      <div class:list={["mb-12", centered && "text-center"]}>
        {title && (
          <h2 class="text-3xl font-semibold text-slate-900 dark:text-white md:text-4xl">
            {title}
          </h2>
        )}
        {subtitle && (
          <p
            class:list={[
              "mt-4 max-w-2xl text-lg text-slate-600 dark:text-slate-400",
              centered && "mx-auto",
            ]}
          >
            {subtitle}
          </p>
        )}
      </div>
    )}

    <slot />
  </div>
</section>
