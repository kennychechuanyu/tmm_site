---
import Navigation from "./Navigation.astro";
import ThemeToggle from "./ThemeToggle.astro";
import MobileMenu from "./MobileMenu.astro";

const navItems = [
  { label: "Home", href: "/" },
  { label: "About", href: "/about" },
  { label: "People", href: "/people" },
  { label: "Events", href: "/events" },
  { label: "News", href: "/news" },
  { label: "Resources", href: "/resources" },
  { label: "Community", href: "/community" },
  { label: "Contact", href: "/contact" },
];
---

<header class="sticky top-0 z-50 border-b border-slate-200 bg-white/95 backdrop-blur-sm supports-[backdrop-filter]:bg-white/80 dark:border-slate-800 dark:bg-slate-950/95 dark:supports-[backdrop-filter]:bg-slate-950/80">
  <div class="container-wide">
    <nav class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <!-- Logo Icon: Three interconnected nodes (Nature-style muted palette) -->
        <svg class="h-8 w-8 transition-transform group-hover:scale-105" viewBox="0 0 40 40" fill="none">
          <!-- Connecting lines -->
          <path d="M20 8 L32 28 M20 8 L8 28 M8 28 L32 28" stroke="currentColor" stroke-width="1.5" class="text-slate-400 dark:text-slate-600" />
          <!-- T node (top) -->
          <circle cx="20" cy="8" r="6" class="fill-slate-700 dark:fill-slate-300" />
          <text x="20" y="11" text-anchor="middle" class="fill-white dark:fill-slate-900 text-[8px] font-bold">T</text>
          <!-- M node (bottom left) -->
          <circle cx="8" cy="28" r="6" class="fill-slate-600 dark:fill-slate-400" />
          <text x="8" y="31" text-anchor="middle" class="fill-white dark:fill-slate-900 text-[8px] font-bold">M</text>
          <!-- M node (bottom right) -->
          <circle cx="32" cy="28" r="6" class="fill-slate-600 dark:fill-slate-400" />
          <text x="32" y="31" text-anchor="middle" class="fill-white dark:fill-slate-900 text-[8px] font-bold">M</text>
        </svg>
        <span class="text-xl font-bold text-navy-600 dark:text-navy-400 group-hover:text-navy-700 dark:group-hover:text-navy-300 transition-colors">
          TMM
        </span>
        <span class="hidden text-sm text-slate-500 dark:text-slate-400 lg:inline">
          Theory, Model, Measurement
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden items-center gap-1 md:flex">
        <Navigation items={navItems} />
        <div class="ml-4 border-l border-slate-200 pl-4 dark:border-slate-700">
          <ThemeToggle />
        </div>
      </div>

      <!-- Mobile Menu -->
      <div class="flex items-center gap-2 md:hidden">
        <ThemeToggle />
        <MobileMenu items={navItems} />
      </div>
    </nav>
  </div>
</header>
