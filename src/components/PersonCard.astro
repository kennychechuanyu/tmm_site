---
interface Props {
  name: string;
  role: string;
  affiliation: string;
  image?: string;
  website?: string;
  email?: string;
}

const { name, role, affiliation, image, website, email } = Astro.props;

// Generate initials for placeholder
const initials = name.split(" ").map((n) => n[0]).join("");
---

<div class="card flex flex-col items-center text-center">
  <!-- Avatar -->
  <div class="h-24 w-24 overflow-hidden rounded-full bg-slate-200 dark:bg-slate-700">
    {image ? (
      <img
        src={image}
        alt={name}
        class="h-full w-full object-cover"
        loading="lazy"
      />
    ) : (
      <div class="flex h-full w-full items-center justify-center text-2xl font-semibold text-slate-400 dark:text-slate-500">
        {initials}
      </div>
    )}
  </div>

  <h3 class="mt-4 font-semibold text-slate-900 dark:text-white">{name}</h3>
  <p class="text-sm text-navy-600 dark:text-navy-400">{role}</p>
  <p class="mt-1 text-sm text-slate-600 dark:text-slate-400">{affiliation}</p>

  <!-- Links -->
  {(website || email) && (
    <div class="mt-4 flex gap-3">
      {website && (
        <a
          href={website}
          target="_blank"
          rel="noopener noreferrer"
          class="text-slate-400 hover:text-navy-600 dark:hover:text-navy-400 transition-colors"
          aria-label={`${name}'s website`}
        >
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
          </svg>
        </a>
      )}
      {email && (
        <a
          href={`mailto:${email}`}
          class="text-slate-400 hover:text-navy-600 dark:hover:text-navy-400 transition-colors"
          aria-label={`Email ${name}`}
        >
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
          </svg>
        </a>
      )}
    </div>
  )}
</div>
