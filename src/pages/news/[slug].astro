---
import PageLayout from "../../layouts/PageLayout.astro";
import Section from "../../components/Section.astro";
import Button from "../../components/Button.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const newsEntries = await getCollection("news");
  return newsEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Format date helper
function formatDate(date: Date): string {
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}

// Get type badge color
function getTypeBadge(type: string): { bg: string; text: string; label: string } {
  switch (type) {
    case "meeting-notes":
      return {
        bg: "bg-navy-100 dark:bg-navy-900/50",
        text: "text-navy-700 dark:text-navy-300",
        label: "Meeting Notes"
      };
    case "announcement":
      return {
        bg: "bg-teal-100 dark:bg-teal-900/50",
        text: "text-teal-700 dark:text-teal-300",
        label: "Announcement"
      };
    default:
      return {
        bg: "bg-slate-100 dark:bg-slate-800",
        text: "text-slate-700 dark:text-slate-300",
        label: "Update"
      };
  }
}

const badge = getTypeBadge(entry.data.type);
---

<PageLayout
  title={entry.data.title}
  description={entry.data.description}
>
  <Section background="white">
    <article class="mx-auto max-w-3xl">
      <!-- Back link -->
      <a
        href="/news"
        class="inline-flex items-center gap-2 text-sm text-slate-600 hover:text-slate-900 dark:text-slate-400 dark:hover:text-white mb-8"
      >
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
        </svg>
        Back to News
      </a>

      <!-- Header -->
      <header class="mb-8">
        <div class="flex flex-wrap items-center gap-3 text-sm mb-4">
          <time class="text-slate-500 dark:text-slate-400">
            {formatDate(entry.data.date)}
          </time>
          <span class={`inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium ${badge.bg} ${badge.text}`}>
            {badge.label}
          </span>
        </div>
        <h1 class="text-3xl font-bold text-slate-900 dark:text-white sm:text-4xl">
          {entry.data.title}
        </h1>
        {entry.data.author && (
          <p class="mt-4 text-slate-600 dark:text-slate-400">
            By {entry.data.author}
          </p>
        )}
      </header>

      <!-- Content -->
      <div class="prose prose-slate dark:prose-invert max-w-none
        prose-headings:font-semibold
        prose-h2:text-2xl prose-h2:mt-10 prose-h2:mb-4
        prose-h3:text-xl prose-h3:mt-8 prose-h3:mb-3
        prose-p:text-slate-600 dark:prose-p:text-slate-400
        prose-li:text-slate-600 dark:prose-li:text-slate-400
        prose-strong:text-slate-900 dark:prose-strong:text-white
        prose-a:text-navy-600 dark:prose-a:text-navy-400
        prose-blockquote:border-navy-500 prose-blockquote:text-slate-600 dark:prose-blockquote:text-slate-400
        prose-hr:border-slate-200 dark:prose-hr:border-slate-700
      ">
        <Content />
      </div>

      <!-- Footer -->
      <footer class="mt-12 pt-8 border-t border-slate-200 dark:border-slate-700">
        <Button href="/news" variant="secondary">
          View All News
        </Button>
      </footer>
    </article>
  </Section>
</PageLayout>
