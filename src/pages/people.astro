---
import PageLayout from "../layouts/PageLayout.astro";
import Section from "../components/Section.astro";

// Coordinating Team members
const coordinatingCommittee = [
  {
    name: "Dr. Kenny Yu",
    role: "Quantitative Psychology and Individual Differences",
    institution: "KU Leuven",
    email: "kenny.yu@kuleuven.be",
    image: "/images/people/KY.jpg",
  },
  {
    name: "Dr. Niels Vanhasbroeck",
    role: "Psychological Methods",
    institution: "University of Amsterdam",
    email: "n.d.p.vanhasbroeck@uva.nl",
    image: "/images/people/NV.jpg",
  },
  {
    name: "Dr. Maria Robinson",
    role: "Behavioural Science Group",
    institution: "University of Warwick",
    email: "maria.robinson@warwick.ac.uk",
    image: "/images/people/MR.png",
  },
];
---

<PageLayout
  title="People"
  description="Meet the researchers behind the TMM network."
  subtitle="Meet the researchers behind TMM"
>
  <!-- Coordinating Team -->
  <Section background="white">
    <div class="mx-auto max-w-4xl">
      <h2 class="text-2xl font-semibold text-slate-900 dark:text-white">
        Coordinating Team
      </h2>

      <div class="mt-10 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {coordinatingCommittee.map((member) => (
          <div class="group rounded-xl bg-white p-8 text-center shadow-sm transition-all duration-300 hover:shadow-lg dark:bg-slate-800">
            <!-- Photo -->
            <img
              src={member.image}
              alt={member.name}
              class="mx-auto h-40 w-40 rounded-full object-cover ring-4 ring-slate-100 transition-transform duration-300 group-hover:scale-105 dark:ring-slate-700"
            />

            <!-- Content -->
            <h3 class="mt-6 whitespace-nowrap text-xl font-semibold text-slate-900 dark:text-white">
              {member.name}
            </h3>
            <p class="mt-2 font-medium text-navy-600 dark:text-navy-400">
              {member.institution}
            </p>
            <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">
              {member.role}
            </p>
            <a
              href={`mailto:${member.email}`}
              class="mt-4 inline-flex items-center gap-2 rounded-full bg-slate-100 px-4 py-2 text-sm text-slate-600 transition-colors hover:bg-navy-100 hover:text-navy-700 dark:bg-slate-700 dark:text-slate-300 dark:hover:bg-navy-900/50 dark:hover:text-navy-300"
            >
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
              </svg>
              Email
            </a>
          </div>
        ))}
      </div>
    </div>
  </Section>

  <!-- Active Contributors -->
  <Section background="gray">
    <div class="mx-auto max-w-4xl">
      <h2 class="text-2xl font-semibold text-slate-900 dark:text-white">
        Active Contributors
      </h2>
      <p class="mt-8 text-slate-600 dark:text-slate-400 italic">
        Coming soon...
      </p>
    </div>
  </Section>

  <!-- Network Members -->
  <Section background="white">
    <div class="mx-auto max-w-4xl">
      <h2 class="text-2xl font-semibold text-slate-900 dark:text-white">
        Network Members
      </h2>
      <p class="mt-8 text-slate-600 dark:text-slate-400 italic">
        Coming soon...
      </p>
    </div>
  </Section>
</PageLayout>
